<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dangerousthings.switcheroo" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Switcheroo</name>
    <description>
        Switcheroo control app
    </description>
    <author email="john@mclear.co.uk" href="http://mclear.co.uk">
        John McLear
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="res/icon/ios/icon.png" width="99" height="99" />
        <icon src="res/icon/ios/background.png" width="159" height="159" />
        <splash src="res/screen/ios/splash.jpg" width="768" height="1280"/>
    </platform>
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/icon/android/mdpi.png" density="mdpi" />
        <icon src="res/icon/android/hdpi.png" density="hdpi" />
        <icon src="res/icon/android/xhdpi.png" density="xhdpi" />
    </platform>
</widget>
